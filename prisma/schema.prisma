generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  password String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  supliers_cad Supplier[]
  category_cad Category[]
  products_cad Product[]

  @@map("users")
}

model Category {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  products Product[]

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  @@map("categories")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  value       String
  description String
  banner      String
  amount      Int
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())

  category    Category @relation(fields: [category_id], references: [id])
  category_id String

  items Item[]

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  supplier    Supplier @relation(fields: [supplier_id], references: [id])
  supplier_id String

  @@map("products")
}

model Item {
  id         String    @id @default(uuid())
  amount     Int
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  product    Product @relation(fields: [product_id], references: [id])
  product_id String

  @@map("items")
}

model Supplier {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  product Product[]

  @@map("suppliers")
}
